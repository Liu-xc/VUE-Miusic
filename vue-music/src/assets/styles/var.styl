// 字体定义规范
$font-size-small-s = 10px
$font-size-small = 12px
$font-size-medium = 14px
$font-size-medium-x = 16px
$font-size-large = 18px
$font-size-large-x = 22px
// 背景颜色定义
$bg-white = rgba(255, 255, 255, 1)
$bg-white-l = rgba(255, 255, 255, 0.8)
$bg-white-ll = rgba(255, 255, 255, 0.5)
$bg-dark-blue = rgba(53, 73, 94, 1)
$bg-dark-blue-l = rgba(53, 73, 94, 0.8)
$bg-dark-blue-ll = rgba(53, 73, 94, 0.5)
$bg-green = rgba(65, 184, 131, 1)
$bg-green-l = rgba(65, 184, 131, 0.8)
$bg-green-ll = rgba(65, 184, 131, 0.5)
// 字体图标定义
$icon-size-small-s = 10px
$icon-size-small = 12px
$icon-size-midium = 14px
$icon-size-midium-x = 16px
$icon-size-large = 18px
$icon-size-large-x = 22px
// 定义顶部和底部的高度
$top-height = 70px
$bottom-height = 70px
$switch-height = 40px
$top-padding-height = $top-height + $switch-height

full-screen-container()
  background $bg-green-ll
  position absolute
  bottom 0
  right 0
  left 0
  top 0
  overflow scroll

container()
  full-screen-container()
  top $top-padding-height